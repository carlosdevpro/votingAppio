<nav class="navbar glassy-navbar fixed-top">
  <div class="container-fluid justify-content-center position-relative">
    <a
      id="secretTrigger"
      class="navbar-brand d-flex align-items-center"
      href="/"
    >
      <span class="me-2">⚽</span>
      <span id="teamName" class="brand-typewriter">Wombwell Town U12s</span>
    </a>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const secretEl = document.getElementById('secretTrigger');
    let pressTimer;
    let activated = false;

    if (!secretEl) {
      console.log('❌ secretTrigger not found on this page');
      return;
    }

    // Desktop
    secretEl.addEventListener('mousedown', (e) => {
      pressTimer = setTimeout(() => {
        activated = true;
        window.location.href = '/admin/secret-tools';
      }, 5000);
    });

    secretEl.addEventListener('mouseup', (e) => {
      clearTimeout(pressTimer);
      if (activated) {
        e.preventDefault();
        activated = false;
      }
    });

    secretEl.addEventListener('mouseleave', () => clearTimeout(pressTimer));

    // Mobile
    secretEl.addEventListener('touchstart', () => {
      pressTimer = setTimeout(() => {
        activated = true;
        window.location.href = '/admin/secret-tools';
      }, 5000);
    });

    secretEl.addEventListener('touchend', () => {
      clearTimeout(pressTimer);
      activated = false;
    });
  });
</script>
