<%- include('partials/header') %>

<!-- Loading Spinner -->
<div
  id="loading-spinner"
  class="d-flex justify-content-center align-items-center"
  style="height: 60vh"
>
  <div class="spinner-border text-primary" role="status">
    <span class="visually-hidden">Loading...</span>
  </div>
</div>

<!-- Main Content -->
<div id="main-content" class="d-none container mt-5">
  <h2 class="text-center mb-4">ğŸ”‘ Forgot Your Password?</h2>

  <% if (messages.error) { %>
  <div id="flash-message" class="alert alert-danger text-center">
    <%= messages.error[0] %>
  </div>
  <% } %> <% if (messages.success) { %>
  <div id="flash-message" class="alert alert-success text-center">
    <%= messages.success[0] %>
  </div>
  <% } %>

  <form action="/forgot" method="POST" class="w-50 mx-auto">
    <div class="mb-3">
      <label for="email" class="form-label">Enter your email address:</label>
      <input
        type="email"
        name="email"
        id="email"
        class="form-control"
        required
      />
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary">Send Reset Link</button>
    </div>
  </form>
</div>

<%- include('partials/footer') %>
