<%- include('partials/header') %> <%- include('partials/alerts') %> <% let msg =
(typeof messages !== 'undefined') ? messages : (typeof locals !== 'undefined' ?
locals.messages : {}); %> <% if (messages.success && messages.success.length >
0) { %>
<div class="floating-alert alert alert-success shadow text-center">
  <%= messages.success[0] %>
</div>
<% } %> <% if (messages.error && messages.error.length > 0) { %>
<div class="floating-alert alert alert-danger shadow text-center">
  <%= messages.error[0] %>
</div>
<% } %>

<div class="container my-5">
  <div class="card bg-dark text-white p-4 shadow">
    <h2 class="text-center mb-4">‚ûï Add New Player</h2>

    <form action="/admin/players/add" method="POST">
      <input
        type="text"
        name="firstName"
        placeholder="First Name"
        class="form-control mb-3"
        required
      />
      <input
        type="text"
        name="lastName"
        placeholder="Last Name"
        class="form-control mb-3"
        required
      />
      <input
        type="number"
        name="shirtNumber"
        placeholder="Shirt Number"
        class="form-control mb-3"
        required
      />

      <div class="mb-3">
        <label for="position" class="form-label">Position</label>
        <select name="position" id="position" class="form-select" required>
          <option value="">Select Position</option>
          <option value="GK">GK</option>
          <option value="DEF">DEF</option>
          <option value="MID">MID</option>
          <option value="ST">ST</option>
        </select>
      </div>

      <button type="submit" class="btn btn-success w-100">‚ûï Add Player</button>
    </form>

    <div class="d-flex justify-content-center mt-3">
      <a href="/" class="btn btn-primary">üè† Back to Home</a>
    </div>
  </div>
</div>

<!-- Floating Alert Script -->
<script>
  setTimeout(() => {
    const alert = document.querySelector('.floating-alert');
    if (alert) {
      alert.style.transition = 'opacity 0.5s ease-out';
      alert.style.opacity = 0;
      setTimeout(() => alert.remove(), 500);
    }
  }, 4000);
</script>

